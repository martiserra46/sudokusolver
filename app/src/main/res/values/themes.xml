<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SudokuSolver" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_normal</item>
        <item name="colorPrimaryVariant">@color/red_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="numberRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">@dimen/number_button_width</item>
        <item name="android:layout_height">@dimen/number_button_height</item>
        <item name="android:layout_margin">@dimen/number_button_margin</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:background">@drawable/number_button_background</item>
        <item name="android:textColor">@color/number_button_text_color</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>